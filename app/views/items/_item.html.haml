.col-lg-4.col-sm-6.item
  - if item.galleryPlusPictureURL
    = link_to image_tag(item.galleryURL, alt: item.title, class: "img-circle img-responsive img-center"), item.galleryPlusPictureURL, "data-lightbox" => item.galleryPlusPictureURL, "data-title" => item.title
  - else
    = image_tag(item.galleryURL, alt: "No large image: #{item.title}", class: "img-circle img-responsive img-center")
  %h4= link_to item.title, item
  %h4.text-center= item.categoryName
  %ul
    %li
      %h4= "#{number_to_currency item.currentPrice, locale: "en"} + #{number_to_currency item.shippingServiceCost, locale: "en"} (Shipping cost)"
    - if item.bidCount
      %li= "#{item.bidCount} bid(s)"
    %li= item.listingType
    %li= item.endTime.strftime("%Y/%m/%d %H:%M")
  = link_to "参照元", item.viewItemURL, class: "btn btn-default btn-sm", target: :blank
  = link_to "Amazon USで検索", "#{@amazon_associate_us}#{item.title}", class: "btn btn-default btn-sm", target: :blank
  = link_to "Amazon JPで検索", "#{@amazon_associate_jp}#{item.title}", class: "btn btn-default btn-sm", target: :blank
