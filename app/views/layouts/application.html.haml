!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %meta{:content => "ebayで売れた商品のうち、日本から輸出されたものを表示しています。ebay輸出のための価格調査にどうぞ。#{@description}", :name => "description"}
    %meta{:content => "ebay,輸出,せどり,副業,#{@keyword}", :name => "keywords"}
    %meta{:content => "", :name => "author"}

    %title= "日本からebayへ輸出された#{@keyword}落札相場"
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    / Navigation
    .navbar{:role => "navigation"}
      .container
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          .navbar-brand{data:{no_turbolink: true}}= link_to "e.crudoe.com", root_path
          / Collect the nav links, forms, and other content for toggling
        .right#bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              %strong
                %small
                  ebayへ輸出された
                  - if @keyword
                    = link_to @keyword, "#{items_path}?keyword=#{@keyword}"
                  - else
                    商品一覧
              
        / /.navbar-collapse
    / Page Content
    .container
      = yield

      .row
        .col-lg-12
          .ad
            %script{:async => "", :src => "//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"}
              / e.crudoe.com responsible
            %ins.adsbygoogle{"data-ad-client" => "ca-pub-9916693973832627", "data-ad-format" => "auto", "data-ad-slot" => "4278992737", :style => "display:block"}
            :javascript
              (adsbygoogle = window.adsbygoogle || []).push({});

      / Footer
      %footer
        .row.text-center
          .col-lg-12
            %p{data:{no_turbolink: true}}= link_to "Copyright © e.crudoe.com #{Date.today.year}", root_path
          / /.col-lg-12
        / /.row
    / /.container

  :javascript
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-17879447-10', 'auto');
    ga('send', 'pageview');
